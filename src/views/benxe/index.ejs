<%- include('../partials/header', { title: 'Quản lý Bến Xe', user }) %>

<section class="container mt-4">
  <h2 class="mb-3">Quản lý Bến Xe</h2>

  <form action="/admin/benxe/add" method="POST" class="mb-4">
    <div class="row g-2 align-items-center">
      <div class="col-md-5">
        <input type="text" name="BenXe_name" class="form-control" placeholder="Nhập tên bến xe..." required>
      </div>
      <div class="col-md-4">
        <select name="TinhThanhPho_id" class="form-select" required>
          <option value="">-- Chọn Tỉnh/Thành phố --</option>
          <% tinhthanh.forEach(t => { %>
            <option value="<%= t.TinhThanhPho_id %>"><%= t.TinhThanhPho_name %></option>
          <% }) %>
        </select>
      </div>
      <div class="col-md-3">
        <button class="btn btn-primary w-100" type="submit">Thêm Bến Xe</button>
      </div>
    </div>
  </form>

  <table class="table table-striped table-bordered align-middle">
    <thead class="table-dark">
      <tr>
        <th>ID</th>
        <th>Tên Bến Xe</th>
        <th>Tỉnh/Thành phố</th>
        <th style="width:160px;">Hành động</th>
      </tr>
    </thead>
    <tbody>
      <% list.forEach(item => { %>
        <tr>
          <td><%= item.BenXe_id %></td>
          <td><%= item.BenXe_name %></td>
          <td><%= item.TinhThanhPho_name %></td>
          <td>
            <a href="/admin/benxe/edit/<%= item.BenXe_id %>" class="btn btn-warning btn-sm">Sửa</a>
            <form action="/admin/benxe/delete/<%= item.BenXe_id %>" method="POST" style="display:inline;">
              <button type="submit" class="btn btn-danger btn-sm">Xóa</button>
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</section>

<%- include('../partials/footer') %>
