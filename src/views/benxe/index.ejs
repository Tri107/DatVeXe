<!DOCTYPE html>
<html lang="vi">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.3/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdn.datatables.net/2.3.4/css/dataTables.bootstrap5.css">
  <link rel="stylesheet" href="/style.css">
</head>

<body class="bg-light">

  <%- include('../partials/header', { title: 'Quản lý Bến Xe' , user }) %>

    <main class="container my-5">
      <div class="card shadow-sm border-0">
        <div class="card-header text-white header">
          <h4 class="mb-0">Quản lý Bến Xe</h4>
        </div>

        <div class="card-body">
          <!-- Form thêm bến xe -->
          <form method="POST" action="/admin/benxe/add" class="row g-3 mb-4 align-items-end">
            <div class="col-md-5">
              <label class="form-label">Tên Bến Xe</label>
              <input name="BenXe_name" type="text" class="form-control" placeholder="VD: Bến xe Miền Đông" required>
            </div>

            <div class="col-md-5">
              <label class="form-label">Tỉnh / Thành phố</label>
              <select name="TinhThanhPho_id" class="form-select" required>
                <option value="">-- Chọn Tỉnh / Thành phố --</option>
                <% if (tinhthanh.length===0) { %>
                  <option disabled>Chưa có dữ liệu</option>
                  <% } else { %>
                    <% tinhthanh.forEach(t=> { %>
                      <option value="<%= t.TinhThanhPho_id %>">
                        <%= t.TinhThanhPho_name %>
                      </option>
                      <% }) %>
                        <% } %>
              </select>
            </div>

            <div class="col-md-2">
              <button class="btn btn-success w-100">Thêm</button>
            </div>
          </form>

          <!-- Bảng danh sách bến xe -->
          <div class="table-responsive">
            <table id="benxeTable" class="table table-striped table-bordered align-middle">
              <thead class="table-primary">
                <tr>
                  <th style="width:80px;">ID</th>
                  <th>Tên Bến Xe</th>
                  <th>Tỉnh / Thành phố</th>
                  <th class="text-center" style="width:160px;">Hành động</th>
                </tr>
              </thead>
              <tbody>
                <% if (!list || list.length===0) { %>
                  <tr>
                    <td colspan="4" class="text-center text-muted">Chưa có bến xe nào</td>
                  </tr>
                  <% } else { %>
                    <% list.forEach(item=> { %>
                      <tr>
                        <td>
                          <%= item.BenXe_id %>
                        </td>
                        <td class="text-start">
                          <%= item.BenXe_name %>
                        </td>
                        <td class="text-start">
                          <%= item.TinhThanhPho_name %>
                        </td>
                        <td class="text-center">
                          <div class="btn-group btn-group-sm" role="group">
                            <a href="/admin/benxe/edit/<%= item.BenXe_id %>" class="btn btn-warning">Sửa</a>
                            <button type="submit" form="formDel_<%= item.BenXe_id %>"
                              class="btn btn-danger">Xóa</button>
                          </div>
                          <form id="formDel_<%= item.BenXe_id %>" action="/admin/benxe/delete/<%= item.BenXe_id %>"
                            method="POST" onsubmit="return confirm('Xóa bến xe này?')">
                          </form>
                        </td>
                      </tr>
                      <% }) %>
                        <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </main>

    <%- include('../partials/footer') %>

      <!-- Script -->
      <script src="https://code.jquery.com/jquery-3.7.1.js"></script>
      <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.3/js/bootstrap.bundle.min.js"></script>
      <script src="https://cdn.datatables.net/2.3.4/js/dataTables.js"></script>
      <script src="https://cdn.datatables.net/2.3.4/js/dataTables.bootstrap5.js"></script>

      <script>
        new DataTable('#benxeTable', {
          language: {
            url: 'https://cdn.datatables.net/plug-ins/2.3.4/i18n/vi.json'
          },
          pageLength: 10,
          lengthMenu: [5, 10, 20, 50]
        });
      </script>

</body>

</html>