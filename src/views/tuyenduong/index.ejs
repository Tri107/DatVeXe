<%- include('../partials/header', { title: 'Quản lý Tuyến Đường', user }) %>

<section class="container mt-4">
  <h2 class="mb-3">Quản lý Tuyến Đường</h2>

  <form action="/admin/tuyenduong/add" method="POST" class="mb-4">
    <div class="row g-2 align-items-center">
      <div class="col-md-3">
        <input type="text" name="Quang_duong" class="form-control" placeholder="Quãng đường (km)" required>
      </div>
      <div class="col-md-2">
        <input type="text" name="Thoi_gian" class="form-control" placeholder="Thời gian (giờ)" required>
      </div>
      <div class="col-md-3">
        <select name="Ben_di" class="form-select" required>
          <option value="">-- Chọn Bến đi --</option>
          <% benxe.forEach(b => { %>
            <option value="<%= b.BenXe_id %>"><%= b.BenXe_name %></option>
          <% }) %>
        </select>
      </div>
      <div class="col-md-3">
        <select name="Ben_den" class="form-select" required>
          <option value="">-- Chọn Bến đến --</option>
          <% benxe.forEach(b => { %>
            <option value="<%= b.BenXe_id %>"><%= b.BenXe_name %></option>
          <% }) %>
        </select>
      </div>
      <div class="col-md-1">
        <button class="btn btn-primary w-100" type="submit">Thêm</button>
      </div>
    </div>
  </form>

  <table class="table table-striped table-bordered align-middle">
    <thead class="table-dark">
      <tr>
        <th>ID</th>
        <th>Quãng đường (km)</th>
        <th>Thời gian (giờ)</th>
        <th>Bến đi</th>
        <th>Bến đến</th>
        <th style="width: 160px;">Hành động</th>
      </tr>
    </thead>
    <tbody>
      <% list.forEach(item => { %>
        <tr>
          <td><%= item.TuyenDuong_id %></td>
          <td><%= item.Quang_duong %></td>
          <td><%= item.Thoi_gian %></td>
          <td><%= item.BenDi_name %></td>
          <td><%= item.BenDen_name %></td>
          <td>
            <a href="/admin/tuyenduong/edit/<%= item.TuyenDuong_id %>" class="btn btn-warning btn-sm">Sửa</a>
            <form action="/admin/tuyenduong/delete/<%= item.TuyenDuong_id %>" method="POST" style="display:inline;">
              <button type="submit" class="btn btn-danger btn-sm">Xóa</button>
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</section>

<%- include('../partials/footer') %>
