<!DOCTYPE html>
<html lang="vi">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
  <%- include('../partials/header', { title: 'Sửa tài xế', user }) %>

  <section class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h2><i class="bi bi-pencil-square me-2"></i>Sửa thông tin tài xế</h2>
      <a href="/admin/taixe" class="btn btn-outline-secondary btn-sm">← Quay lại danh sách</a>
    </div>

    <form action="/admin/taixe/edit/<%= item.TaiXe_id %>" method="POST" class="row g-4">

      <div class="col-md-4">
        <label class="form-label">Tên tài xế</label>
        <input type="text" name="TaiXe_name" class="form-control" value="<%= item.TaiXe_name %>" required>
      </div>

      <div class="col-md-2">
        <label class="form-label">Tuổi</label>
        <input type="number" name="TaiXe_age" class="form-control" value="<%= item.TaiXe_age %>" required>
      </div>

      <div class="col-md-3">
        <label class="form-label">Bằng lái</label>
        <input type="text" name="TaiXe_BangLai" class="form-control" value="<%= item.TaiXe_BangLai %>" required>
      </div>

      <div class="col-md-3">
        <label class="form-label">Ngày vào làm</label>
        <input type="date" name="NgayVaoLam" class="form-control"
          value="<%= new Date(item.NgayVaoLam).toISOString().slice(0,10) %>" required>
      </div>

      <div class="col-md-3">
        <label class="form-label">Số điện thoại</label>
        <input type="text" name="SDT" class="form-control" value="<%= item.SDT %>" required>
      </div>

      <div class="col-12 text-end mt-3">
        <button type="submit" class="btn btn-success me-2">
          <i class="bi bi-save me-1"></i>Cập nhật
        </button>
        <a href="/admin/taixe" class="btn btn-secondary">
          <i class="bi bi-x-circle me-1"></i>Hủy
        </a>
      </div>
    </form>
  </section>

  <%- include('../partials/footer') %>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
</body>

</html>
