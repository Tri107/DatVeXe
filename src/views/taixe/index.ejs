<%- include('../partials/header', { title: 'Quản lý tài xế', user }) %>

<section class="container mt-4">
  <h2 class="mb-3">Quản lý tài xế</h2>

  <form action="/admin/taixe/add" method="POST" class="row g-2 mb-3">
    <div class="col-md-2"><input type="text" name="TaiXe_name" placeholder="Tên tài xế" class="form-control" required></div>
    <div class="col-md-1"><input type="number" name="TaiXe_age" placeholder="Tuổi" class="form-control" required></div>
    <div class="col-md-2"><input type="text" name="TaiXe_BangLai" placeholder="Bằng lái" class="form-control" required></div>
    <div class="col-md-2"><input type="date" name="NgayVaoLam" class="form-control" required></div>
    <div class="col-md-2"><input type="text" name="SDT" placeholder="SĐT" class="form-control" required></div>
    <div class="col-md-3 text-end"><button class="btn btn-primary">Thêm tài xế</button></div>
  </form>

  <table class="table table-striped table-bordered">
    <thead class="table-dark">
      <tr>
        <th>ID</th><th>Tên tài xế</th><th>Tuổi</th><th>Bằng lái</th><th>Ngày vào làm</th><th>SĐT</th><th>Hành động</th>
      </tr>
    </thead>
    <tbody>
      <% list.forEach(t => { %>
        <tr>
          <td><%= t.TaiXe_id %></td>
          <td><%= t.TaiXe_name %></td>
          <td><%= t.TaiXe_age %></td>
          <td><%= t.TaiXe_BangLai %></td>
          <td><%= new Date(t.NgayVaoLam).toLocaleDateString() %></td>
          <td><%= t.SDT %></td>
          <td>
            <a href="/admin/taixe/edit/<%= t.TaiXe_id %>" class="btn btn-warning btn-sm">Sửa</a>
            <form action="/admin/taixe/delete/<%= t.TaiXe_id %>" method="POST" style="display:inline;">
              <button class="btn btn-danger btn-sm" onclick="return confirm('Xóa tài xế này?')">Xóa</button>
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</section>

<%- include('../partials/footer') %>
