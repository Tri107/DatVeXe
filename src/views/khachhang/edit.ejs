<!DOCTYPE html>
<html lang="vi">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
  <%- include('../partials/header', { title: 'Sửa khách hàng', user }) %>

  <section class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h2><i class="bi bi-pencil-square me-2"></i>Sửa thông tin khách hàng #<%= item.KhachHang_id %></h2>
      <a href="/admin/khachhang" class="btn btn-outline-secondary btn-sm">← Quay lại danh sách</a>
    </div>

    <% if (error) { %>
      <div class="alert alert-danger"><%= error %></div>
    <% } %>

    <form method="POST" action="/admin/khachhang/<%= item.KhachHang_id %>?_method=PUT" class="row g-4">

      <div class="col-md-4">
        <label class="form-label">Tên khách hàng</label>
        <input name="KhachHang_name" class="form-control" value="<%= item.KhachHang_name %>" required>
      </div>

      <div class="col-md-4">
        <label class="form-label">Email</label>
        <input name="email" type="email" class="form-control" value="<%= item.email %>" placeholder="VD: abc@gmail.com">
      </div>

      <div class="col-md-4">
        <label class="form-label">Số điện thoại</label>
        <input name="SDT" class="form-control" value="<%= item.SDT %>" required placeholder="VD: 0901234567">
      </div>

      <div class="col-12 text-end mt-3">
        <button type="submit" class="btn btn-success me-2">
          <i class="bi bi-save me-1"></i>Lưu thay đổi
        </button>
        <a href="/admin/khachhang" class="btn btn-secondary">
          <i class="bi bi-x-circle me-1"></i>Hủy
        </a>
      </div>
    </form>
  </section>

  <%- include('../partials/footer') %>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
</body>

</html>
