<!DOCTYPE html>
<html lang="vi">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
  <%- include('../partials/header', { title: 'Sửa xe', user }) %>

  <section class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h2><i class="bi bi-pencil-square me-2"></i>Sửa thông tin xe</h2>
      <a href="/admin/xe" class="btn btn-outline-secondary btn-sm">← Quay lại danh sách</a>
    </div>

    <% if (error) { %>
      <div class="alert alert-danger"><%= error %></div>
    <% } %>

    <form method="POST" action="/admin/xe/<%= item.Xe_id %>?_method=PUT" class="row g-4">

      <div class="col-md-4">
        <label class="form-label">Biển số</label>
        <input type="text" name="Bien_so" class="form-control" value="<%= item.Bien_so %>" required>
      </div>

      <div class="col-md-4">
        <label class="form-label">Trạng thái</label>
        <input type="text" name="Trang_thai" class="form-control" value="<%= item.Trang_thai %>" required>
      </div>

      <div class="col-md-4">
        <label class="form-label">Loại xe</label>
        <select name="LoaiXe_name" class="form-select" required>
          <% loaiXeList.forEach(lx => { %>
            <option value="<%= lx.LoaiXe_name %>" <%= lx.LoaiXe_name === item.LoaiXe_name ? 'selected' : '' %>>
              <%= lx.LoaiXe_name %>
            </option>
          <% }) %>
        </select>
      </div>

      <div class="col-12 text-end mt-3">
        <button type="submit" class="btn btn-success me-2">
          <i class="bi bi-save me-1"></i>Lưu thay đổi
        </button>
        <a href="/admin/xe" class="btn btn-secondary">
          <i class="bi bi-x-circle me-1"></i>Hủy
        </a>
      </div>
    </form>
  </section>

  <%- include('../partials/footer') %>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
</body>

</html>
