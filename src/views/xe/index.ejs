<!DOCTYPE html>
<html lang="vi">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.3/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdn.datatables.net/2.3.4/css/dataTables.bootstrap5.css">
  <link rel="stylesheet" href="/style.css">
</head>

<body class="bg-light">

  <%- include('../partials/header', { title: 'Quản lý Xe' , user }) %>

    <main class="container my-5">
      <div class="card shadow-sm border-0">
        <div class="card-header text-white header">
          <h4 class="mb-0">Quản lý Xe</h4>
        </div>

        <div class="card-body">
          <!-- Form thêm xe -->
          <form method="POST" action="/admin/xe" class="row g-3 mb-4 align-items-end">
            <div class="col-md-4">
              <label class="form-label">Biển số</label>
              <input name="Bien_so" type="text" class="form-control" placeholder="VD: 51A-12345" required>
            </div>

            <div class="col-md-4">
              <label class="form-label">Trạng thái</label>
              <input name="Trang_thai" type="text" class="form-control" placeholder="VD: Đang hoạt động" required>
            </div>

            <div class="col-md-3">
              <label class="form-label">Loại xe</label>
              <select name="LoaiXe_name" class="form-select" required>
                <% if (loaiXeList.length===0) { %>
                  <option disabled>Chưa có loại xe nào</option>
                  <% } else { %>
                    <% loaiXeList.forEach(lx=> { %>
                      <option value="<%= lx.LoaiXe_name %>">
                        <%= lx.LoaiXe_name %>
                      </option>
                      <% }) %>
                        <% } %>
              </select>
            </div>

            <div class="col-md-1">
              <button class="btn btn-success w-100">Thêm</button>
            </div>
          </form>

          <!-- Bảng danh sách xe -->
          <div class="table-responsive">
            <table id="xeTable" class="table table-striped table-bordered align-middle">
              <thead class="table-primary">
                <tr>
                  <th>ID</th>
                  <th>Biển số</th>
                  <th>Trạng thái</th>
                  <th>Loại xe</th>
                  <th class="text-center">Hành động</th>
                </tr>
              </thead>
              <tbody>
                <% if (!items || items.length===0) { %>
                  <tr>
                    <td colspan="5" class="text-center text-muted">Chưa có xe nào</td>
                  </tr>
                  <% } else { %>
                    <% items.forEach(item=> { %>
                      <tr>
                        <td>
                          <%= item.Xe_id %>
                        </td>
                        <td>
                          <%= item.Bien_so %>
                        </td>
                        <td>
                          <%= item.Trang_thai %>
                        </td>
                        <td>
                          <%= item.LoaiXe_name %>
                        </td>
                        <td class="text-center">
                          <div class="btn-group btn-group-sm" role="group">
                            <a href="/admin/xe/edit/<%= item.Xe_id %>" class="btn btn-warning">Sửa</a>
                            <button type="submit" form="formDel_<%= item.Xe_id %>" class="btn btn-danger">Xóa</button>
                            <form id="formDel_<%= item.Xe_id %>" method="POST"
                              action="/admin/xe/<%= item.Xe_id %>?_method=DELETE"
                              onsubmit="return confirm('Xóa xe này?')">
                            </form>
                        </td>
                      </tr>
                      <% }) %>
                        <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </main>

    <%- include('../partials/footer') %>

      <!-- Script -->
      <script src="https://code.jquery.com/jquery-3.7.1.js"></script>
      <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.3/js/bootstrap.bundle.min.js"></script>
      <script src="https://cdn.datatables.net/2.3.4/js/dataTables.js"></script>
      <script src="https://cdn.datatables.net/2.3.4/js/dataTables.bootstrap5.js"></script>

      <script>
        new DataTable('#xeTable', {
          language: {
            url: 'https://cdn.datatables.net/plug-ins/2.3.4/i18n/vi.json'
          },
          pageLength: 10,
          lengthMenu: [5, 10, 20, 50]
        });
      </script>

</body>

</html>