<!DOCTYPE html>
<html lang="vi">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  
</head>

<body>
  <%- include('../partials/header', { title: 'Sửa vé', user }) %>

  <section class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h2><i class="bi bi-pencil-square me-2"></i>Sửa thông tin vé</h2>
      <a href="/admin/ve" class="btn btn-outline-secondary btn-sm">← Quay lại danh sách</a>
    </div>

    <form action="/admin/ve/edit/<%= item.Ve_id %>" method="POST" class="row g-4">
      <div class="col-md-3">
        <label class="form-label">Giá vé</label>
        <input type="number" name="Ve_gia" class="form-control" value="<%= item.Ve_gia %>" required>
      </div>

      <div class="col-md-3">
        <label class="form-label">Ngày tạo</label>
        <input type="datetime-local" name="NgayTao" class="form-control"
          value="<%= new Date(item.NgayTao).toISOString().slice(0,16) %>" required>
      </div>

      <div class="col-md-3">
        <label class="form-label">Ghi chú</label>
        <input type="text" name="GhiChu" class="form-control" placeholder="Nhập ghi chú (nếu có)" value="<%= item.GhiChu %>">
      </div>

      <div class="col-md-3">
        <label class="form-label">Khách hàng</label>
        <select name="KhachHang_id" class="form-select">
          <% khach.forEach(k => { %>
          <option value="<%= k.KhachHang_id %>" <%=k.KhachHang_id===item.KhachHang_id ? 'selected' : '' %>>
            <%= k.KhachHang_name %>
          </option>
          <% }) %>
        </select>
      </div>

      <div class="col-md-3">
        <label class="form-label">Chuyến</label>
        <select name="Chuyen_id" class="form-select">
          <% chuyen.forEach(c => { %>
          <option value="<%= c.Chuyen_id %>" <%=c.Chuyen_id===item.Chuyen_id ? 'selected' : '' %>>
            <%= c.Chuyen_name %>
          </option>
          <% }) %>
        </select>
      </div>

      <div class="col-12 text-end mt-3">
        <button type="submit" class="btn btn-success me-2">
          <i class="bi bi-save me-1"></i>Cập nhật
        </button>
        <a href="/admin/ve" class="btn btn-secondary">
          <i class="bi bi-x-circle me-1"></i>Hủy
        </a>
      </div>
    </form>
  </section>

  <%- include('../partials/footer') %>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
</body>

</html>
