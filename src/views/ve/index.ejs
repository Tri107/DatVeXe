<!DOCTYPE html>
<html lang="vi">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Quản lý vé</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.3/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdn.datatables.net/2.3.4/css/dataTables.bootstrap5.css">
  <link rel="stylesheet" href="/style.css">
</head>

<body class="bg-light">

  <%- include('../partials/header', { title: 'Quản lý vé' , user }) %>

    <main class="container my-5">
      <div class="card shadow-sm border-0">
        <div class="card-header text-white header">
          <h4 class="mb-0">Quản lý vé</h4>
        </div>

        <div class="card-body">
          <!-- Form thêm vé -->
          <form action="/admin/ve/add" method="POST" class="row g-3 mb-4">
            <div class="col-md-3">
              <label class="form-label">Giá vé</label>
              <input type="text" name="Ve_gia" class="form-control" placeholder="Giá vé" required>
            </div>
            <div class="col-md-3">
              <label class="form-label">Ngày tạo</label>
              <input type="datetime-local" name="NgayTao" class="form-control" required>
            </div>
            <div class="col-md-3">
              <label class="form-label">Khách hàng</label>
              <select name="KhachHang_id" class="form-select" required>
                <option value="">Chọn khách hàng</option>
                <% khach.forEach(k=> { %>
                  <option value="<%= k.KhachHang_id %>">
                    <%= k.KhachHang_name %>
                  </option>
                  <% }) %>
              </select>
            </div>
            <div class="col-md-3">
              <label class="form-label">Chuyến</label>
              <select name="Chuyen_id" class="form-select" required>
                <option value="">Chọn chuyến</option>
                <% chuyen.forEach(c=> { %>
                  <option value="<%= c.Chuyen_id %>">
                    <%= c.Chuyen_name %>
                  </option>
                  <% }) %>
              </select>
            </div>
            <div class="col-md-9">
              <label class="form-label">Ghi chú</label>
              <input type="text" name="GhiChu" class="form-control" placeholder="Ghi chú (nếu có)">
            </div>
            <div class="col-md-3 d-flex align-items-end">
              <button class="btn btn-success w-100">Thêm vé</button>
            </div>
          </form>

          <!-- Bảng danh sách vé -->
          <div class="table-responsive">
            <table class="table table-striped table-bordered align-middle" id="ve">
              <thead class="table-primary">
                <tr>
                  <th>ID</th>
                  <th>Chuyến</th>
                  <th>Khách hàng</th>
                  <th>Giá vé</th>
                  <th>Ngày tạo</th>
                  <th>Ghi chú</th>
                  <th class="text-center">Hành động</th>
                </tr>
              </thead>
              <tbody>
                <% list.forEach(v=> { %>
                  <tr>
                    <td>
                      <%= v.Ve_id %>
                    </td>
                    <td>
                      <%= v.Chuyen_name %>
                    </td>
                    <td>
                      <%= v.KhachHang_name %>
                    </td>
                    <td>
                      <%= v.Ve_gia.toLocaleString() %> ₫
                    </td>
                    <td>
                      <%= new Date(v.NgayTao).toLocaleString('vi-VN') %>
                    </td>
                    <td>
                      <%= v.GhiChu || '' %>
                    </td>
                    <td class="text-center">
                      <div class="btn-group btn-group-sm" role="group">
                        <a href="/admin/ve/edit/<%= v.Ve_id %>" class="btn btn-warning">Sửa</a>
                        <button type="submit" form="formDel_<%= v.Ve_id %>" class="btn btn-danger">Xóa</button>
                      </div>
                      <form id="formDel_<%= v.Ve_id %>" action="/admin/ve/delete/<%= v.Ve_id %>" method="POST"
                        onsubmit="return confirm('Xóa vé này?')">
                      </form>
                    </td>
                  </tr>
                  <% }) %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </main>

    <%- include('../partials/footer') %>

      <!-- Script -->
      <script src="https://code.jquery.com/jquery-3.7.1.js"></script>
      <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.3/js/bootstrap.bundle.min.js"></script>
      <script src="https://cdn.datatables.net/2.3.4/js/dataTables.js"></script>
      <script src="https://cdn.datatables.net/2.3.4/js/dataTables.bootstrap5.js"></script>

      <script>
        new DataTable('#ve', {
          language: {
            url: 'https://cdn.datatables.net/plug-ins/2.3.4/i18n/vi.json'
          },
          pageLength: 10,
          lengthMenu: [5, 10, 20, 50]
        });
      </script>

</body>

</html>