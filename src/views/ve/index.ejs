<%- include('../partials/header', { title: 'Quản lý vé', user }) %>

<section class="container mt-4">
  <h2 class="mb-3">Quản lý vé</h2>

  <form action="/admin/ve/add" method="POST" class="row g-2 mb-3">
    <div class="col-md-2">
      <input type="number" name="Ve_gia" placeholder="Giá vé" class="form-control" required>
    </div>

    <div class="col-md-3">
      <input type="datetime-local" name="NgayTao" class="form-control" required>
    </div>

    <div class="col-md-3">
      <input type="text" name="GhiChu" placeholder="Ghi chú" class="form-control">
    </div>

    <div class="col-md-2">
      <select name="KhachHang_id" class="form-select" required>
        <option value="">Khách hàng</option>
        <% khach.forEach(k => { %>
          <option value="<%= k.KhachHang_id %>"><%= k.KhachHang_name %></option>
        <% }) %>
      </select>
    </div>

    <div class="col-md-2">
      <select name="Chuyen_id" class="form-select" required>
        <option value="">Chuyến</option>
        <% chuyen.forEach(c => { %>
          <option value="<%= c.Chuyen_id %>"><%= c.Chuyen_name %></option>
        <% }) %>
      </select>
    </div>

    <div class="col-12 text-end">
      <button class="btn btn-primary">Thêm vé</button>
    </div>
  </form>

  <table class="table table-striped table-bordered">
    <thead class="table-dark">
      <tr>
        <th>ID</th>
        <th>Chuyến</th>
        <th>Khách hàng</th>
        <th>Giá vé</th>
        <th>Ngày tạo</th>
        <th>Ghi chú</th>
        <th>Hành động</th>
      </tr>
    </thead>
    <tbody>
      <% list.forEach(v => { %>
        <tr>
          <td><%= v.Ve_id %></td>
          <td><%= v.Chuyen_name %></td>
          <td><%= v.KhachHang_name %></td>
          <td><%= v.Ve_gia.toLocaleString() %> ₫</td>
          <td><%= new Date(v.NgayTao).toLocaleString() %></td>
          <td><%= v.GhiChu %></td>
          <td>
            <a href="/admin/ve/edit/<%= v.Ve_id %>" class="btn btn-warning btn-sm">Sửa</a>
            <form action="/admin/ve/delete/<%= v.Ve_id %>" method="POST" style="display:inline;">
              <button class="btn btn-danger btn-sm" onclick="return confirm('Xóa vé này?')">Xóa</button>
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</section>

<%- include('../partials/footer') %>
