<!DOCTYPE html>
<html lang="vi">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.3/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdn.datatables.net/2.3.4/css/dataTables.bootstrap5.css">
  <link rel="stylesheet" href="/style.css">
</head>

<body class="bg-light">

  <%- include('../partials/header', { title: 'Quản lý Tỉnh/Thành phố' , user }) %>

    <main class="container my-5">
      <div class="card shadow-sm border-0">
        <div class="card-header text-white header">
          <h4 class="mb-0">Quản lý Tỉnh/Thành phố</h4>
        </div>

        <div class="card-body">
          <!-- Form thêm Tỉnh/Thành phố -->
          <form action="/admin/tinhthanhpho/add" method="POST" class="row g-3 mb-4 align-items-end">
            <div class="col-md-10">
              <label class="form-label">Tên Tỉnh/Thành phố</label>
              <input type="text" name="TinhThanhPho_name" class="form-control" placeholder="Nhập tên tỉnh/thành..."
                required>
            </div>

            <div class="col-md-2">
              <button class="btn btn-success w-100">Thêm</button>
            </div>
          </form>

          <!-- Bảng danh sách -->
          <div class="table-responsive">
            <table id="tinhthanhphoTable" class="table table-striped table-bordered align-middle">
              <thead class="table-primary">
                <tr>
                  <th class="text-end" style="width: 70px;">ID</th>
                  <th class="text-center">Tên Tỉnh/Thành phố</th>
                  <th class="text-center" style="width: 160px;">Hành động</th>
                </tr>
              </thead>
              <tbody>
                <% if (!list || list.length===0) { %>
                  <tr>
                    <td colspan="3" class="text-center text-muted">Chưa có tỉnh/thành phố nào</td>
                  </tr>
                  <% } else { %>
                    <% list.forEach(item=> { %>
                      <tr>
                        <td class="text-end">
                          <%= item.TinhThanhPho_id %>
                        </td>
                        <td>
                          <%= item.TinhThanhPho_name %>
                        </td>
                        <td class="text-center">
                          <div class="btn-group btn-group-sm" role="group">
                            <a href="/admin/tinhthanhpho/edit/<%= item.TinhThanhPho_id %>"
                              class="btn btn-warning">Sửa</a>
                            <button type="submit" form="formDel_<%= item.TinhThanhPho_id %>"
                              class="btn btn-danger">Xóa</button>
                          </div>
                          <form id="formDel_<%= item.TinhThanhPho_id %>"
                            action="/admin/tinhthanhpho/delete/<%= item.TinhThanhPho_id %>" method="POST"
                            onsubmit="return confirm('Bạn có chắc muốn xóa không?')">
                          </form>
                        </td>
                      </tr>
                      <% }) %>
                        <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </main>

    <%- include('../partials/footer') %>

      <!-- Script -->
      <script src="https://code.jquery.com/jquery-3.7.1.js"></script>
      <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.3/js/bootstrap.bundle.min.js"></script>
      <script src="https://cdn.datatables.net/2.3.4/js/dataTables.js"></script>
      <script src="https://cdn.datatables.net/2.3.4/js/dataTables.bootstrap5.js"></script>

      <script>
        new DataTable('#tinhthanhphoTable', {
          language: {
            url: 'https://cdn.datatables.net/plug-ins/2.3.4/i18n/vi.json'
          },
          pageLength: 10,
          lengthMenu: [5, 10, 20, 50]
        });
      </script>

</body>

</html>