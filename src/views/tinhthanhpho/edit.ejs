<!DOCTYPE html>
<html lang="vi">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
  <%- include('../partials/header', { title: 'Sửa Tỉnh/Thành phố', user }) %>

  <section class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h2><i class="bi bi-pencil-square me-2"></i>Sửa thông tin Tỉnh/Thành phố</h2>
      <a href="/admin/tinhthanhpho" class="btn btn-outline-secondary btn-sm">← Quay lại danh sách</a>
    </div>

    <form action="/admin/tinhthanhpho/edit/<%= item.TinhThanhPho_id %>" method="POST" class="row g-4">

      <div class="col-md-6">
        <label class="form-label">Tên Tỉnh/Thành phố</label>
        <input type="text" name="TinhThanhPho_name" class="form-control" value="<%= item.TinhThanhPho_name %>" required>
      </div>

      <div class="col-12 text-end mt-3">
        <button type="submit" class="btn btn-success me-2">
          <i class="bi bi-save me-1"></i>Lưu thay đổi
        </button>
        <a href="/admin/tinhthanhpho" class="btn btn-secondary">
          <i class="bi bi-x-circle me-1"></i>Hủy
        </a>
      </div>

    </form>
  </section>

  <%- include('../partials/footer') %>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
</body>

</html>
