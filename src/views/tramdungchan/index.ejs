<!DOCTYPE html>
<html lang="vi">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.3/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdn.datatables.net/2.3.4/css/dataTables.bootstrap5.css">
  <link rel="stylesheet" href="/style.css">
</head>

<body class="bg-light">

  <%- include('../partials/header', { title: 'Quản lý Trạm Dừng Chân' , user }) %>

    <main class="container my-5">
      <div class="card shadow-sm border-0">
        <div class="card-header text-white header">
          <h4 class="mb-0">Quản lý Trạm Dừng Chân</h4>
        </div>

        <div class="card-body">

          
          <% if (error) { %>
            <div class="alert alert-danger">
              <%= error %>
            </div>
            <% } %>

              
              <form method="POST" action="/admin/tramdungchan" class="row g-3 mb-4 align-items-end">
                <div class="col-md-6">
                  <label class="form-label">Tên trạm dừng</label>
                  <input name="TramDungChan_name" type="text" class="form-control"
                    placeholder="VD: Trạm nghỉ Bình Dương" required>
                </div>

                <div class="col-md-4">
                  <label class="form-label">Thời gian dừng (phút)</label>
                  <input name="Thoi_gian_dung" type="text" class="form-control" placeholder="VD: 20" min="1" required>
                </div>

                <div class="col-md-2">
                  <button class="btn btn-success w-100">Thêm</button>
                </div>
              </form>

              
              <div class="table-responsive">
                <table id="tramDungTable" class="table table-striped table-bordered align-middle">
                  <thead class="table-primary">
                    <tr>
                      <th style="width:80px;">ID</th>
                      <th class="text-center">Tên trạm dừng</th>
                      <th class="text-center">Thời gian dừng (phút)</th>
                      <th class="text-center" style="width:160px;">Hành động</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% if (!items || items.length===0) { %>
                      <tr>
                        <td colspan="4" class="text-center text-muted">Chưa có trạm dừng chân nào</td>
                      </tr>
                      <% } else { %>
                        <% items.forEach(item=> { %>
                          <tr>
                            <td>
                              <%= item.TramDungChan_id %>
                            </td>
                            <td class="text-start">
                              <%= item.TramDungChan_name %>
                            </td>
                            <td>
                              <%= item.Thoi_gian_dung %>
                            </td>
                            <td class="text-center">
                              <div class="btn-group btn-group-sm" role="group">
                                <a href="/admin/tramdungchan/edit/<%= item.TramDungChan_id %>"
                                  class="btn btn-warning">Sửa</a>
                                <button type="submit" form="formDel_<%= item.TramDungChan_id %>"
                                  class="btn btn-danger">Xóa</button>
                              </div>
                              <form id="formDel_<%= item.TramDungChan_id %>" method="POST"
                                action="/admin/tramdungchan/<%= item.TramDungChan_id %>?_method=DELETE"
                                onsubmit="return confirm('Xác nhận xóa trạm dừng này?')">
                              </form>
                            </td>
                          </tr>
                          <% }) %>
                            <% } %>
                  </tbody>
                </table>
              </div>
        </div>
      </div>
    </main>

    <%- include('../partials/footer') %>

      
      <script src="https://code.jquery.com/jquery-3.7.1.js"></script>
      <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.3/js/bootstrap.bundle.min.js"></script>
      <script src="https://cdn.datatables.net/2.3.4/js/dataTables.js"></script>
      <script src="https://cdn.datatables.net/2.3.4/js/dataTables.bootstrap5.js"></script>

      <script>
        new DataTable('#tramDungTable', {
          language: {
            url: 'https://cdn.datatables.net/plug-ins/2.3.4/i18n/vi.json'
          },
          pageLength: 10,
          lengthMenu: [5, 10, 20, 50]
        });
      </script>

</body>

</html>